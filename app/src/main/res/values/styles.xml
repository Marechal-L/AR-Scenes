<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFF</item>
        <item name="colorPrimaryDark">#3D3D3D</item>
        <item name="colorAccent">@color/blueSimplicity</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

 </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/blueSimplicity</item>
    </style>
 <!-- ActionBar style
 <style name="ActionBar" parent="android:Widget.Holo.Light.ActionBar">
     <item name="android:background">#000</item>
     <item name="android:textColor">@color/blueSimplicity</item>
 </style>-->

    <!-- Design menu button -->
    <style name="BlueButton">
        <item name="android:background">@drawable/simplicitybutton</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    
    <style name="MenuButton" parent="BlueButton">
        <item name="android:padding">30dp</item>
        <item name="android:layout_margin">25dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Design vote panel -->
    <style name="WhitePanel">
        <item name="android:radius">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">#FFF</item>
    </style>

    <style name="LayoutDesign">
        <item name="android:background">#3D3D3D</item>
    </style>

</resources>
